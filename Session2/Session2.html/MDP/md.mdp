
; VARIOUS PREPROCESSING OPTIONS
title                    = Production Simulation

; RUN CONTROL PARAMETERS
integrator               = md
tinit                    = 0       		; Starting time
dt                       = 0.001   		; 1 femtosecond time step for integration
nsteps                   = 		   		; CHANGE - Make simulation total of 5 ns

; OUTPUT CONTROL OPTIONS
nstxout                  = 10000 		; CHANGE - Writing total 1000 points of data
nstvout                  = 10000 		; CHANGE - Writing total 1000 points of data
nstfout                  = 0     		; Not writing forces
nstlog                   = 10000  		; CHANGE - Writing total 1000 points of data 
nstenergy                = 10000  		; CHANGE - Writing total 1000 points of data
nstxtcout                = 10000  		; CHANGE - Writing total 1000 points of data
energygrps               = Protein Non-Protein


; NEIGHBORSEARCHING PARAMETERS
cutoff-scheme			 = Verlet
pbc                      = xyz
rlist                    = 1.2

; OPTIONS FOR ELECTROSTATICS AND VDW
coulombtype              = PME
rcoulomb                 = 1.2
vdw-type                 = Cut-off
rvdw                     = 1.2

; Temperature coupling  
Tcoupl                   = V-rescale
tc-grps                  = Protein  Non-Protein
tau_t                    = 0.1      0.1
ref_t                    = 300      300

; Pressure coupling     
Pcoupl                   = C-rescale
Pcoupltype               = Isotropic
tau_p                    = 1.0
compressibility          = 4.5e-5
ref_p                    = 1.0


; GENERATE VELOCITIES FOR STARTUP RUN
gen_vel                  = no

; OPTIONS FOR BONDS    
constraints              = h-bonds




